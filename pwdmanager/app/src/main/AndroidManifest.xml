<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zyx.pwdmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        tools:replace="android:icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.密码管理器">

        <activity
            android:name=".LaunchActivity"
            android:theme="@style/Theme.密码管理器.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.密码管理器.NoActionBar">
        </activity>

        <activity
            android:name=".GroupDetailActivity"
            android:theme="@style/Theme.密码管理器.ActionBar">
        </activity>

        <activity
            android:name=".EdItItemActivity"
            android:theme="@style/Theme.密码管理器.ActionBar">
        </activity>

        <activity
            android:name=".AddActivity"
            android:theme="@style/Theme.密码管理器.ActionBar">
        </activity>

        <activity
            android:name=".InputPasswordActivity"
            android:theme="@style/Theme.密码管理器.NoActionBar">
        </activity>

        <activity
            android:name=".SetPasswordActivity"
            android:theme="@style/Theme.密码管理器.NoActionBar">
        </activity>


    </application>

</manifest>